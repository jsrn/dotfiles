[includeIf "gitdir:~/code/"]
  path = .gitconfig-work
[includeIf "gitdir:~/code-personal/"]
  path = .gitconfig-personal
[core]
  excludesfile = ~/.gitignore_global
[push]
  autoSetupRemote = true
[init]
  defaultBranch = main
[branch]
  sort = -committerdate
[pretty]
  nicelog = format:%C(yellow)%h%Creset %C(auto)%d%Creset %C(white)%s%Creset %C(dim white)%an (%as)%Creset
[alias]
  dm = "!f() { git diff $(git merge-base --fork-point master); }; f"
  changed-files = diff --name-only master
  mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
[format]
  pretty = nicelog
[maintenance]
	repo = /Users/jsrn/code/gitlab-development-kit
	repo = /Users/jsrn/code/gitlab-development-kit/gitlab
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	template = /Users/jsrn/.git_commit_msg.txt
[blame]
  coloring = repeatedLines
  date = short
[color "blame"]
  repeatedLines = white dim